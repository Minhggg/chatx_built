<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-10">
      
      <!-- Cột trái -->
      <div class="lg:col-span-2 space-y-10">
        <!-- Tiêu đề -->
        <div class="text-center mb-10">
          <h2 class="text-gray-600 text-2xl mb-2">Mua Gói chuyên nghiệp</h2>
          <h1 class="text-2xl md:text-4xl font-bold">
            Chọn gói phù hợp với nhu cầu của bạn
          </h1>
        </div>

        <!-- Chọn gói -->
        <div class="bg-white rounded-2xl shadow p-6 space-y-4">
          <h3 class="font-semibold text-lg">Chọn gói</h3>
          <div class="space-y-3">
            <label class="flex justify-between items-center border border-gray-400 rounded-lg p-3 cursor-pointer">
              <div class="flex items-center">
                <input type="radio" name="plan" value="200000" checked class="mr-2 plan" />
                <span>GÓI CÁ NHÂN</span>
              </div>
              <span class="font-medium">200,000 đ/tháng</span>
            </label>

            <label class="flex justify-between items-center border border-gray-400 rounded-lg p-3 cursor-pointer">
              <div class="flex items-center">
                <input type="radio" name="plan" value="2369000" class="mr-2 plan" />
                <span>GÓI DOANH NGHIỆP</span>
              </div>
              <span class="font-medium">2,369,000 đ/tháng</span>
            </label>
          </div>
        </div>

        <!-- Chọn thời hạn -->
        <div class="bg-white rounded-2xl shadow p-6 space-y-4">
          <h3 class="font-semibold text-lg">Chọn thời hạn</h3>
          <div class="space-y-3">
            <label class="flex justify-between items-center border border-gray-400 rounded-lg p-3 cursor-pointer">
              <div class="flex items-center gap-2">
                <input type="radio" name="duration" value="3" class="duration" />
                <span>3 tháng</span>
              </div>
              <span>×3</span>
            </label>

            <label class="flex justify-between items-center border border-gray-400 bg-blue-50 rounded-lg p-3 cursor-pointer">
              <div class="flex items-center gap-2">
                <input type="radio" name="duration" value="6" checked class="duration" />
                <span>6 tháng</span>
              </div>
              <span>×6</span>
            </label>

            <label class="flex justify-between items-center border border-gray-400 rounded-lg p-3 cursor-pointer">
              <div class="flex items-center gap-2">
                <input type="radio" name="duration" value="12" class="duration" />
                <span>1 năm</span>
              </div>
              <span>×12</span>
            </label>
          </div>

          <!-- Mua thêm dịch vụ Bot AI -->
          <div class="mt-4 border border-gray-300 rounded-lg p-4 space-y-3">
            <label class="flex items-center gap-2">
              <input type="checkbox" id="addonCheck" />
              <span class="font-medium">Mua thêm dịch vụ Build Bot AI</span>
            </label>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">(10,000,000 đ / AI Agent)</span>
              <div class="flex items-center border border-gray-300 rounded-lg overflow-hidden">
                <button type="button" class="px-3 py-1 bg-gray-100 hover:bg-gray-200 text-lg font-bold" id="minusBtn">−</button>
                <input type="number" id="addonQty" value="1" min="1" class="w-12 text-center border-0 focus:ring-0 outline-none" disabled />
                <button type="button" class="px-3 py-1 bg-gray-100 hover:bg-gray-200 text-lg font-bold" id="plusBtn">+</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Cột phải: Chi tiết hóa đơn -->
      <aside class="bg-white rounded-2xl shadow p-6 h-fit">
        <h3 class="font-semibold text-lg mb-4">Chi tiết hóa đơn</h3>
        <div class="space-y-2 text-sm" id="invoice"></div>
        <button id="payBtn" class="mt-6 w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg font-medium">
          Tiếp tục thanh toán
        </button>
      </aside>
    </div>
  </div>
</section>

<script is:client>
  const plans = document.querySelectorAll(".plan");
  const durations = document.querySelectorAll(".duration");
  const addonCheck = document.getElementById("addonCheck");
  const addonQty = document.getElementById("addonQty");
  const plusBtn = document.getElementById("plusBtn");
  const minusBtn = document.getElementById("minusBtn");
  const invoiceDiv = document.getElementById("invoice");
  const payBtn = document.getElementById("payBtn");

  const ADDON_PRICE = 10000000;

  function calcInvoice() {
    const plan = document.querySelector(".plan:checked");
    const duration = document.querySelector(".duration:checked");
    let total = 0;
    let html = "";

    if (plan && duration) {
      const planPrice = parseInt(plan.value);
      const months = parseInt(duration.value);
      const subTotal = planPrice * months;
      total += subTotal;
      html += `<div class="flex justify-between"><span>${plan.nextElementSibling.textContent} × ${months} tháng</span><span>${subTotal.toLocaleString("vi-VN")} đ</span></div>`;
    }

    if (addonCheck.checked) {
      addonQty.disabled = false;
      const qty = parseInt(addonQty.value);
      const subTotal = ADDON_PRICE * qty;
      total += subTotal;
      html += `<div class="flex justify-between"><span>Build Bot AI × ${qty}</span><span>${subTotal.toLocaleString("vi-VN")} đ</span></div>`;
    } else {
      addonQty.disabled = true;
    }

    html += `<div class="flex justify-between font-semibold border-t pt-2"><span>Tổng tiền thanh toán</span><span>${total.toLocaleString("vi-VN")} đ</span></div>`;
    invoiceDiv.innerHTML = html;
  }

  plans.forEach(r => r.addEventListener("change", calcInvoice));
  durations.forEach(r => r.addEventListener("change", calcInvoice));
  addonCheck.addEventListener("change", calcInvoice);
  addonQty.addEventListener("input", calcInvoice);
  plusBtn.addEventListener("click", () => { addonQty.stepUp(); calcInvoice(); });
  minusBtn.addEventListener("click", () => { addonQty.stepDown(); calcInvoice(); });

  payBtn.addEventListener("click", () => {
    const plan = document.querySelector(".plan:checked");
    const duration = document.querySelector(".duration:checked");
    const addon = addonCheck.checked ? parseInt(addonQty.value) : 0;

    if (!plan || !duration) {
      alert("Vui lòng chọn gói dịch vụ và thời hạn trước khi thanh toán!");
      return;
    }

    const planPrice = parseInt(plan.value);
    const months = parseInt(duration.value);
    let total = planPrice * months;
    if (addon > 0) total += ADDON_PRICE * addon;

    const url = `/qr?plan=${encodeURIComponent(plan.nextElementSibling.textContent)}&months=${months}&addon=${addon}&total=${total}`;
    window.location.href = url;
  });

  calcInvoice();
</script>
