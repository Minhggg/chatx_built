          btn.classList.remove('bg-gray-900', 'text-white');
        });
        e.target.classList.add('bg-gray-900', 'text-white');
        
        switchView('list'); // Chuyển về chế độ xem danh sách
        renderCards(category); 
      }

      // Logic 2: Chuyển sang trang chi tiết (View Template)
      if (e.target.classList.contains('view-template-btn')) {
        const templateId = e.target.dataset.id;
        
        // Tìm kiếm dữ liệu template tương ứng
        let selectedTemplate = null;
        Object.keys(data).forEach(categoryKey => {
            const foundCard = data[categoryKey].cards.find(card => card.id === templateId);
            if (foundCard) {
                selectedTemplate = foundCard;
            }
        });
        
        if (selectedTemplate) {
            renderDetail(selectedTemplate); // Truyền dữ liệu động
        }
      }
    });
  </script>
</BaseLayout>